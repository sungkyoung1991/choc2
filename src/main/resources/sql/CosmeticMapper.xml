	<insert id="createCosmetic" parameterType="cosmeticVO">
		INSERT INTO
		TBL_COSMETIC(BRAND,MODEL,PRODUCT,AMOUNT,PRICE,INGREDIENT)
		VALUES(#{brand},#{model},#{product},#{amount},#{price},#{ingredient})
	</insert>

